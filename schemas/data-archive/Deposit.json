{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Deposit.json",
  "title": "Deposit",
  "description": "An OAIS Deposit entity representing a submission from a Producer",
  "type": "object",
  "properties": {
    "identifier": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier"
    },
    "dateCreated": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "producer": {
      "$ref": "./Producer.json"
    },
    "name": {
      "type": "string",
      "description": "Title of the deposit"
    },
    "status": {
      "type": "string",
      "enum": ["submitted", "processing", "accepted", "rejected"],
      "description": "Current status of the deposit"
    },
    "sips": {
      "type": "array",
      "items": {
        "$ref": "./SIP.json"
      },
      "minItems": 1,
      "description": "Submission Information Packages included in this deposit"
    },
    "metadataFile": {
      "$ref": "./DepositMetadataFile.json"
    }
  },
  "required": ["identifier", "dateCreated", "producer", "name", "sips", "metadataFile"],
  "additionalProperties": true
}
