{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Producer.json",
  "title": "Producer",
  "description": "An OAIS Producer entity that creates and submits content",
  "type": "object",
  "properties": {
    "identifier": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier"
    },
    "dateCreated": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "name": {
      "type": "string",
      "description": "Name of the producer"
    },
    "contact": {
      "type": "string",
      "description": "Contact information for the producer"
    }
  },
  "required": ["identifier", "dateCreated", "name"],
  "additionalProperties": true
}
