{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "DepositMetadataFile.json",
  "title": "DepositMetadataFile",
  "description": "An external metadata file accompanying a deposit",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "description": "Path to the metadata file"
    },
    "format": {
      "type": "string",
      "enum": ["csv", "xml"],
      "description": "File format of the metadata file"
    }
  },
  "required": ["path", "format"],
  "additionalProperties": true
}
